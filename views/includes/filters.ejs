    <style>
        /* Custom CSS for horizontal scrolling and container */
        .filter-container {
            display: flex;
            align-items: center;
            justify-content: space-between;
            width: 100%;
            overflow: hidden;
        
        }

        .filters {
            display: flex;
            overflow-x: scroll;
            scroll-behavior: smooth;
            white-space: nowrap;
            width: 80%;
        }

        .filter {
            text-align: center;
            margin-right: 2rem;
            margin-top: 2rem;
            opacity: 0.7;
            cursor: pointer;
            opacity: 0.7;
        }

        /* Hides the scrollbar while still allowing scrolling */
        .filters::-webkit-scrollbar {
            display: none;
        }

        .filters {
            -ms-overflow-style: none;
            /* Internet Explorer 10+ */
            scrollbar-width: none;
            /* Firefox */
        }

        .filter:hover {
            opacity: 1;
        }


        .filter p {
            font-size: 0.8rem;

        }

        .filter i {
            font-size: 1.5rem;

        }

        .scroll-button {
            background-color: #fff;
            color: #000;
            padding: 0.8rem;
            cursor: pointer;
            border-radius: 50%;
            border: 1px solid #00000032;
        }

        .scroll-button:hover {

            box-shadow: rgba(50, 50, 93, 0.25) 0px 13px 27px -5px, rgba(0, 0, 0, 0.3) 0px 8px 16px -8px;
            transition: 0.5s ease-out;
        }

        .Tax-toggle {
            border: 1px solid black;
            border-radius: 1rem;
            height: 3rem;
            width: 17rem;
            padding: 0.8rem;
            margin-left: 2rem;
        }

        #leftButton {
            display: none;
        }
    </style>



